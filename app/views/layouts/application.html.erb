<!DOCTYPE html>
<html>
<head>
  <title>MovieReviews</title>
  <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha/css/bootstrap.min.css" %>
  <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>
  <div id="background" style="background-image:url('<%= @background %>')"></div>

  <% flash.each do |key, value| %>
    <div class="alert alert-info">
      <%= value %>
    </div>
  <% end %>

  <div class="container">
    <br />
    <%= yield %>
  </div>
  <br />

</body>
</html>
